<!DOCTYPE html>
<html>
<head>
  <title>:) pdx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Vollkorn:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
</head>

<body>

  <div class="header">
    <a href="/" class="header-left-container"><img src="/images/logo-blue.png" class="main-logo"></a>
      <h2 class="header-text">keep portland happy</h2>
    <div class="header-right-container">
      <% if !user_signed_in? %>
        <%= link_to "Log In", new_user_session_path, class: "header-link" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "header-link" %>
      <% else %>
        <%= image_tag attachment_url(current_user, :profile_image, :fill, 50, 50, format: "jpg") %>
        <button><%= link_to current_user.email, edit_user_registration_path %></button>
        <button><%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
      <% end %>
    </div>
  </div>

  <div class="container body-container">

    <div class="panel-container faves">
      <h2>faves</h2>
      <% if user_signed_in? %>
        <% current_user.favorites.each do |fave| %>
          <p><%= fave.eat.name %> <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, user_favorite_path(current_user, fave), {:method => 'delete'} %></p>
        <% end %>
      <% else %>
        <p><%= link_to "Sign in", new_user_session_path %> to get started!</p>
      <% end %>
    </div>

    <% if notice %>
      <p class='alert alert-success'><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class='alert alert-danger'><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
