<div class="container">

  <%= simple_form_for [ @eat, @review ] do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 1..5, as: :radio_buttons %>
    <%= f.button :submit %>
  <% end %>
</div>
